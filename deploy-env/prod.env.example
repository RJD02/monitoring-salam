# Production Configuration for Salam Monitoring Platform
ENV=prod
HOST=0.0.0.0
PORT=8080

# NFS Path for production
NFS_ROOT=/home/informaticaadmin/nfs_backup/monitoring

# Production Yarn Resource Manager
YARN_RM_URL=http://rm-host:8088

# Production Informatica SQL Server
INFORMATICA_DB_HOST=prod-sql-server
INFORMATICA_DB_PORT=1433
INFORMATICA_DB_NAME=INFORMATICA_PROD
INFORMATICA_DB_USER=monitoring_user
INFORMATICA_DB_PASS=secure_password
INFORMATICA_TIME_OFFSET=3

# Production logging
LOG_LEVEL=warn
LOG_FILE_ENABLED=true
LOG_JSON_ENABLED=true
LOG_FILE_PATH=/var/log/monitoring

# Production database
SQLITE_PATH=/var/lib/monitoring/history.db